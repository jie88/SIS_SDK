<resources>

  <!-- Base application theme. -->
  <style name="SISAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimarySIS</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDarkSIS</item>
    <item name="colorAccent">@color/colorAccentSIS</item>
  </style>


  <style name="top_bar_txt_tittle">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_centerInParent">true</item>
    <item name="android:textColor">@color/black</item>
    <item name="android:textSize">@dimen/txt_size_50</item>
  </style>

  <style name="top_bar_txt_left_or_right">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_centerInParent">true</item>
    <item name="android:textColor">@color/txt_color_6</item>
    <item name="android:textSize">@dimen/txt_size_40</item>
  </style>


  <style name="permission_layout">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginLeft">@dimen/x20</item>
    <item name="android:layout_marginRight">@dimen/x20</item>
    <item name="android:layout_marginTop">@dimen/x50</item>

  </style>

  <style name="permission_txt">
    <item name="android:layout_width">@dimen/x150</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_gravity">center_vertical</item>
    <item name="android:textColor">@color/txt_color_3</item>
    <item name="android:textSize">@dimen/txt_size_40</item>
  </style>
  <style name="permission_edit">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">@dimen/y120</item>
    <item name="android:layout_weight">1</item>
    <item name="android:layout_gravity">center_vertical</item>
    <item name="android:textColor">@color/txt_color_6</item>
    <item name="android:layout_marginLeft">@dimen/x20</item>
    <item name="android:padding">@dimen/x10</item>
    <item name="android:background">@drawable/edt_white_bg</item>
    <item name="android:textSize">@dimen/txt_size_40</item>
  </style>


  <style name="btn">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">@dimen/y120</item>
    <item name="android:layout_marginLeft">@dimen/x20</item>
    <item name="android:layout_marginRight">@dimen/x20</item>
    <item name="android:layout_marginTop">@dimen/x50</item>
    <item name="android:textColor">@color/txt_color_6</item>
    <item name="android:textSize">@dimen/txt_size_40</item>
    <item name="android:background">@drawable/edt_white_bg</item>
  </style>


</resources>
